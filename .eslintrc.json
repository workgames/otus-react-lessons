{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "require-jsdoc" : 0,
        "valid-jsdoc": 0,
        "max-len": ["error", { "code": 180 }],
        "@typescript-eslint/no-unused-vars": ["error"]
    },
    "overrides": [
        {
          "files": [
            "webpack.config.js"
          ],
          "rules": {
            "@typescript-eslint/no-var-requires": [
              "off"
            ]
          }
        }
    ]
}
