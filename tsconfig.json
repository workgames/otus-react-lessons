{
  "compilerOptions": {
    "lib": [ "es2015", "dom" ],
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "es5",
    "module": "commonjs",
    "downlevelIteration": true,
    "noImplicitAny": true,
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
